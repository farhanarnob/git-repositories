<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="textStyleMedium" parent="android:TextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:gravity">start|top</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="buttonStyleRectangle" parent="textStyleMedium">
        <item name="android:elevation">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/bg_rectangle_solid_button</item>
        <item name="android:stateListAnimator">@animator/button_raise</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="paddingStart">16dp</item>
        <item name="paddingEnd">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
    </style>
</resources>